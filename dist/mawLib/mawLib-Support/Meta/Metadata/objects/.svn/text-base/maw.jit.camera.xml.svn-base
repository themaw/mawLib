<!-- REQUIRED: object root, object group, type:(external, mxj, js, abstraction), tags:(comma separated), library: website -->
<object name="maw.jit.camera" 
		group="jit"
		type="external" 
		tags="matrix,cv,filters,video"
		url="http://dev.minneapolisartonwheels.org/projects/show/mawlib"> <!-- documentation page -->
	
	<!-- REQUIRED: a single line description -->	
	<digest name="abstraction for getting video from a camera."/>

	<!-- REQUIRED: a short summary of the function -->	
	<summary name="abstraction for getting video from a camera."/>

	<!-- REQUIRED: a bit of license text -->
	<license name="ï¿½ University of Minnesota, 2009-2010"/>

